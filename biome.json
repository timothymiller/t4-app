{
	"$schema": "https://biomejs.dev/schemas/1.3.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
    "ignoreUnknown": true,
		"ignore": ["**/node_modules/**", "**/dist/**", "**/build/**", "**/ios/**", "**/.git/**", "**/.vscode/**", "**/.android/**", "**/.DS_Store/**", "**/Thumbs.db/**", "**/.tamagui*"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useTemplate": "warn"
			}
		}
	},
	"formatter": {
    "enabled": true,
    "lineWidth": 100,
		"indentStyle": "space",
		"indentWidth": 2
  },
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"jsxQuoteStyle": "single",
			"trailingComma": "es5",
			"semicolons": "asNeeded"
		}
	}
}
