{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["config:base"],
    "packageRules": [
      {
        "matchPackagePatterns": ["^@t4/"],
        "enabled": false
      }
    ],
    "updateInternalDeps": true,
    "rangeStrategy": "bump",
    "automerge": true,
    "includeForks": true
  }